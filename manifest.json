{
  "manifest_version": 2,
  
  "name": "Paperclip",
  "description": "Write quick text",
  "version": "0.1.0",

  "content-scripts": [{
    "matches": ["<all_urls>"],
    "js": ["/scripts/content.js"],
    "run_at": "document_end"
  }],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
  },
  
  "permissions": ["activeTab"]
}
